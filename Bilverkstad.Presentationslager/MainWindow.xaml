<Window x:Class="Bilverkstad.Presentationslager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bilverkstad.Presentationslager"
        mc:Ignorable="d"
        Title="Jocke och Abbes Bilverkstad" Height="500" Width="800" FontSize="20">
  
    <DockPanel LastChildFill="True">
        <!-- DockPanel Top -->
        <!-- DockPanel Bottom -->
        <!-- DockPanel Left -->
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical" 
Background="LightGreen" Margin="10,10,10,10">
            <TextBlock Text="Kundhantering" FontSize="14" FontWeight="Bold" 
HorizontalAlignment="Center" />
            <Button x:Name="VisaKund" Content="Visa Kunder" FontSize="14" Width="110"
Margin="10,10,10,5" Click="VisaKund_Clicked" />
            <Button x:Name="LäggTillKund" Content="Lägg till Kund" FontSize="14" Width="110"
Margin="10,10,10,5" Click="LäggTillKund_Clicked" />
            <Button x:Name="TaBortKund" Content="Ta bort Kund" FontSize="14" Width="110"
Margin="10,10,10,5" Click="TaBortKund_Clicked" />
            <Button x:Name="UppdateraKund" Content="Uppdatera Kund" FontSize="14" Width="110"
Margin="10,10,10,5" Click="UppdateraKund_Clicked" />

        </StackPanel>
        <!-- DockPanel Right -->
        <!-- DockPanel LastChildFill -->
    </DockPanel>
</Window>
