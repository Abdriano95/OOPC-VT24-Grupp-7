<Window x:Class="Bilverkstad.Presentationslager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bilverkstad.Presentationslager"
        mc:Ignorable="d"
        Title="Jocke och Abbes Bilverkstad" Height="Auto" Width="800" FontSize="20">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding Kunder}"
                  SelectedItem="{Binding SelectedKund, Mode=TwoWay}"
                  DisplayMemberPath="förnamn"/>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Content="Kundnummer" Margin="10 10 10 0"/>
            <TextBox Grid.Row="1" Text="{Binding SelectedKund.kundnummer,
            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="2" Content="Personnummer" Margin="10 0"/>
            <TextBox Grid.Row="3" Text="{Binding SelectedKund.personnummer,
            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="4" Content="Förnamn" Margin="10 0"/>
            <TextBox Grid.Row="5" Text="{Binding SelectedKund.förnamn,
            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="6" Content="Efternamn" Margin="10 0"/>
            <TextBox Grid.Row="7" Text="{Binding SelectedKund.efternamn,
            Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="8" Content="Adress" Margin="10 0"/>
            <TextBox Grid.Row="9" Text="{Binding SelectedKund.gatuadress,
             Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="10" Content="Postnummer" Margin="10 0"/>
            <TextBox Grid.Row="11" Text="{Binding SelectedKund.postnummer,
             Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="12" Content="Ort" Margin="10 0"/>
            <TextBox Grid.Row="13" Text="{Binding SelectedKund.ort,
             Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="14" Content="Telefonnummer" Margin="10 0"/>
            <TextBox Grid.Row="15" Text="{Binding SelectedKund.telnr,
             Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>

            <Label Grid.Row="16" Content="Epost" Margin="10 0"/>
            <TextBox Grid.Row="17" Text="{Binding SelectedKund.epost,
             Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10 0 10 10"/>





        </Grid>
    </Grid>
</Window>
