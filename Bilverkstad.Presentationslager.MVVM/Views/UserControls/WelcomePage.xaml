<UserControl x:Class="Bilverkstad.Presentationslager.MVVM.Views.UserControls.WelcomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Bilverkstad.Presentationslager.MVVM.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Transparent">
    <Border Background="#5A6A75"
         CornerRadius="10"
         Padding="20"
         BorderBrush="#1B3C51"
         BorderThickness="1">
        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Jocke och Abbes bilverkstad" FontSize="24" FontWeight="Bold" Foreground="AntiqueWhite" TextAlignment="Center"/>
                <TextBlock Text="Tryck på tabbarna för att navigera." Margin="20" Foreground="AntiqueWhite" TextAlignment="Center"/>
            </StackPanel>
        </Grid>

    </Border>
</UserControl>
